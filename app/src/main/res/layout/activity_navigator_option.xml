<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@drawable/bg"
    >

    <!--
      android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"-->
    <RelativeLayout

        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlvOneID"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_corner_all"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_220sdp">

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/txtTransportID"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/blue_btn_round"
                android:text="Connect with bluetooth"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_bold"
                />


            <RelativeLayout
                android:layout_below="@+id/txtTransportID"
                android:id="@+id/lvlBotttomOptionID1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/edt_shape_round_blue"
                android:orientation="horizontal"
                >


                <EditText

                    android:id="@+id/edtPutCommandID"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/gray"
                    android:hint="Enter device serial number.."
                    android:textColor="@color/black"
                    android:background="#00ffffff"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <TextView

                android:visibility="visible"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/lvlBotttomOptionID1"
                android:id="@+id/txtPODID"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/blue_btn_round"
                android:text="Get Mobile No."
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_bold"
                />


            <TextView
                android:layout_below="@+id/txtPODID"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/txtSimNumberID"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/white"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/blue_fb"
                android:fontFamily="@font/open_sans_bold"
                />

        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>
