<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="activity.CheckRMSActivity">

    <include layout="@layout/toolbar" />
    
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:translationZ="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">


       <EditText
           android:id="@+id/controllerExt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Please enter controller-id"
           android:inputType="text"
           android:textSize="@dimen/_12sdp"
           android:singleLine="true"
           android:maxLines="1"
           android:layout_toStartOf="@+id/searchBtn"
           android:imeOptions="actionDone"/>


            <RelativeLayout
                android:id="@+id/searchBtn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/baseline_search_24" />
            </RelativeLayout>
        </RelativeLayout>


        
    </androidx.cardview.widget.CardView>


   <LinearLayout
       android:id="@+id/deviceDetailLinear"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_5sdp"
           android:translationZ="@dimen/_10sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           app:cardElevation="@dimen/_5sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:weightSum="2">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:text="Device No."
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/_14sdp" />

               <TextView
                   android:id="@+id/device_no"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:padding="5dp"
                 
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14sdp" />

           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_5sdp"
           android:translationZ="@dimen/_10sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           app:cardElevation="@dimen/_5sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:weightSum="2">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:text="Customer Name"
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/_14sdp" />

               <TextView
                   android:id="@+id/cust_nam"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:padding="5dp"
                 
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14sdp" />

           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_5sdp"
           android:translationZ="@dimen/_10sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           app:cardElevation="@dimen/_5sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:weightSum="2">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:text="Customer Mobile"
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/_14sdp" />

               <TextView
                   android:id="@+id/cust_mb"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:padding="5dp"
                 
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14sdp" />

           </LinearLayout>
       </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_5sdp"
           android:translationZ="@dimen/_10sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           app:cardElevation="@dimen/_5sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:weightSum="2">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:text="Sim Operator"
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/_14sdp" />

               <TextView
                   android:id="@+id/operator"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:padding="5dp"
                 
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14sdp" />

           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_5sdp"
           android:translationZ="@dimen/_10sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           app:cardElevation="@dimen/_5sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:weightSum="2">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:text="Device Status"
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/_14sdp" />

               <TextView
                   android:id="@+id/dev_status"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:padding="5dp"
                 
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14sdp" />

           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_5sdp"
           android:translationZ="@dimen/_10sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           app:cardElevation="@dimen/_5sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:weightSum="2">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:text="Motor Status"
                   android:textAlignment="center"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/_14sdp" />

               <TextView
                   android:id="@+id/motr_stats"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:fontFamily="sans-serif-condensed-medium"
                   android:padding="5dp"
                 
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14sdp" />

           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>

</LinearLayout>