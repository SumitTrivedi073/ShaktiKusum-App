<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_mid10"
            android:background="@color/white"
            android:orientation="vertical">

            <include
                android:id="@+id/header1"
                layout="@layout/siteaudit_part_one" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/space_tinny4"
            android:layout_weight="1"
            android:background="@color/header_color"
            android:gravity="center"
            android:padding="@dimen/space_mid10"
            android:text="Save and Back"
            android:textColor="@color/white"
            android:textSize="@dimen/size_xlarge20" />


    </LinearLayout>


</LinearLayout>

