<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/sublayout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sublayout_first_inner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/view_edit_one"
                style="@style/under_line_et"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_mendotry"
                android:drawablePadding="4dp"/>


            <ImageView
                android:id="@+id/view_img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_tinny2"
                android:src="@drawable/scan" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sublayout_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <EditText
                android:id="@+id/view_edit_two"
                style="@style/under_line_et"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:inputType="number" />


            <ImageView
                android:id="@+id/view_img_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_tinny2"
                android:src="@drawable/scan" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
