<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_mid10"
        android:layout_marginRight="@dimen/space_mid10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_xlarge20"
            android:orientation="vertical">

            <TextView
                style="@style/wrap_text_medatory"
                android:drawableRight="@null"
                android:text="Site Audit Date"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/siteaudit_date"
                style="@style/under_line_et"
                android:drawableLeft="@drawable/ic_mendotry"
                android:drawablePadding="5dp"
                android:editable="false"
                android:focusable="false"
                android:inputType="number" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foundation"
                    android:drawableEnd="@drawable/ic_mendotry"
                    android:padding="5dp"
                    android:id="@+id/found_txt"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/radioGroup1">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/fou_ok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="OK"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|left"
                        android:checked="false"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/fou_notok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|right"
                        android:checked="false"
                        android:text="@string/not_ok"
                        android:textSize="13sp" />
                </RadioGroup
                    >

                <EditText
                    android:id="@+id/foud_rea_txt"
                    style="@style/under_line_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Remark"
                    android:textColorHint="@color/colorAccent"
                    android:inputType="textMultiLine"
                    android:paddingStart="8dp"
                    android:lines="4"
                    android:maxLines="6"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Structure Assembly"
                    android:padding="5dp"
                    android:drawableEnd="@drawable/ic_mendotry"
                    android:id="@+id/stru_txt"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/radioGroup2">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/stru_ok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/ok"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|left"
                        android:checked="false"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/stru_notok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|right"
                        android:checked="false"
                        android:text="@string/not_ok"
                        android:textSize="13sp" />
                </RadioGroup
                    >

                <EditText
                    android:id="@+id/stru_rea_txt"
                    style="@style/under_line_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Remark"
                    android:inputType="textMultiLine"
                    android:paddingStart="8dp"
                    android:textColorHint="@color/colorAccent"
                    android:lines="4"
                    android:maxLines="6"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drive Mounting and Cable Dressing"
                    android:drawableEnd="@drawable/ic_mendotry"
                    android:padding="5dp"
                    android:id="@+id/drvcab_txt"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/radioGroup3">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/drvcb_ok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/ok"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|left"
                        android:checked="false"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/drvcb_notok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|right"
                        android:checked="false"
                        android:text="@string/not_ok"
                        android:textSize="13sp" />
                </RadioGroup
                    >

                <EditText
                    android:id="@+id/drvcb_txt"
                    style="@style/under_line_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Remark"
                    android:inputType="textMultiLine"
                    android:paddingStart="8dp"
                    android:textColorHint="@color/colorAccent"
                    android:lines="4"
                    android:maxLines="6"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LA and Earthing"
                    android:drawableEnd="@drawable/ic_mendotry"
                    android:padding="5dp"
                    android:id="@+id/laert_txt"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/radioGroup4">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/laer_ok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/ok"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|left"
                        android:checked="false"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/laer_notok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|right"
                        android:checked="false"
                        android:text="@string/not_ok"
                        android:textSize="13sp" />
                </RadioGroup
                    >

                <EditText
                    android:id="@+id/laer_txt"
                    style="@style/under_line_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Remark"
                    android:inputType="textMultiLine"
                    android:paddingStart="8dp"
                    android:textColorHint="@color/colorAccent"
                    android:lines="4"
                    android:maxLines="6"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workmanship and Work Quality"
                    android:drawableEnd="@drawable/ic_mendotry"
                    android:padding="5dp"
                    android:id="@+id/wrkmn_txt"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/radioGroup5">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/wrk_ok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/ok"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|left"
                        android:checked="false"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/wrk_notok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center|right"
                        android:checked="false"
                        android:text="@string/not_ok"
                        android:textSize="13sp" />
                </RadioGroup
                    >

                <EditText
                    android:id="@+id/wrk_txt"
                    style="@style/under_line_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Remark"
                    android:textColorHint="@color/colorAccent"
                    android:inputType="textMultiLine"
                    android:paddingStart="8dp"
                    android:lines="4"
                    android:maxLines="6"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Site Rating out of 5"
                    android:drawableEnd="@drawable/ic_mendotry"
                    android:padding="5dp"
                    android:id="@+id/site_rat_txt"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="1"
                    android:theme="@style/RatingBar"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>