<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_mid10"
        android:layout_marginRight="@dimen/space_mid10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/sm_Model_Details_two"
                    style="@style/under_line_et"
                    android:layout_marginTop="10dp"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="text" />

                <TextView
                    style="@style/wrap_text_medatory"
                    android:drawableRight="@null"
                    android:text="Pump Model Details"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    style="@style/wrap_text_medatory"
                    android:drawableEnd="@null"
                    android:text="Pump Model Serial No."
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <EditText
                        android:id="@+id/s_no_two"
                        style="@style/under_line_et"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:inputType="text" />


                    <ImageView
                        android:id="@+id/img_scn_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_tinny2"
                        android:src="@drawable/scan" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/sm_Model_Details_three"
                    style="@style/under_line_et"
                    android:layout_marginTop="10dp"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="text" />

                <TextView
                    style="@style/wrap_text_medatory"
                    android:drawableEnd="@null"
                    android:text="Controller Model"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    style="@style/wrap_text_medatory"
                    android:drawableEnd="@null"
                    android:text="Controller Model Serial No."
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/s_no_three"
                        style="@style/under_line_et"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"/>


                    <ImageView
                        android:id="@+id/img_scn_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_tinny2"
                        android:src="@drawable/scan" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner_simoprator"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:spinnerMode="dialog"
                    android:textAlignment="center" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/wrap_text_medatory"
                    android:text="SIM Card Number(20 digit)"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <EditText
                        android:id="@+id/s_no_four"
                        style="@style/under_line_et"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:inputType="text" />


                    <ImageView
                        android:id="@+id/img_scn_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_tinny2"
                        android:src="@drawable/scan" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/wrap_text_medatory"
                    android:drawableEnd="@null"
                    android:text="Installation Delayed Reason"
                    android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/reason_txt"
            android:inputType="textMultiLine"
            android:lines="4"
            android:minLines="2"
            android:gravity="top|start"
            android:maxLines="6"
            style="@style/under_line_et"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
        />


    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
